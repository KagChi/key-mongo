{
  "compilerOptions": {
      "experimentalDecorators": true,
      "target": "es6",
      "module": "commonjs",
      "moduleResolution": "Node",
      "strict": true,
      "declaration": true,
      "noImplicitAny": true,
      "esModuleInterop": true,
      "inlineSourceMap": true,
      "skipLibCheck": true,
      "allowSyntheticDefaultImports": true,
      "resolveJsonModule": true,
      "typeRoots": [
          "node_modules/@types",
          "src/typings"
      ],
      "rootDir": "src",
      "outDir": "dist"
  }
}